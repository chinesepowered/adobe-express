{
  "id": "accessibility-validator-addon",
  "name": "Accessibility Validator",
  "version": "1.0.0",
  "manifestVersion": 3,
  "requirements": {
    "apps": [
      {
        "name": "Express",
        "apiVersion": "1.0.0"
      }
    ]
  },
  "entryPoints": [
    {
      "type": "panel",
      "id": "accessibility-panel"
    }
  ],
  "host": {
    "app": "Express",
    "minVersion": "1.0.0"
  },
  "main": "index.html",
  "icons": [
    {
      "width": 24,
      "height": 24,
      "path": "icons/icon-24.png",
      "theme": ["all"]
    },
    {
      "width": 48,
      "height": 48,
      "path": "icons/icon-48.png",
      "theme": ["all"]
    }
  ],
  "uiEntry": {
    "type": "panel",
    "src": "index.html"
  },
  "permissions": [
    "webview",
    "activeDocument",
    "documentAccess"
  ],
  "author": "Accessibility Validator Team",
  "description": "Real-time accessibility validation tool that checks designs for WCAG compliance directly within Adobe Express canvas.",
  "keywords": [
    "accessibility",
    "WCAG",
    "compliance",
    "validation",
    "design",
    "inclusive",
    "a11y"
  ],
  "license": "Apache-2.0",
  "homepage": "https://github.com/accessibility-validator/express-addon",
  "repository": {
    "type": "git",
    "url": "https://github.com/accessibility-validator/express-addon.git"
  },
  "bugs": {
    "url": "https://github.com/accessibility-validator/express-addon/issues"
  },
  "pricing": {
    "type": "freemium",
    "freeTier": {
      "description": "Basic accessibility checks for color contrast and typography",
      "limits": {
        "dailyChecks": 50
      }
    },
    "premiumTier": {
      "description": "Advanced accessibility validation with AI-powered alt text generation and comprehensive reporting",
      "price": {
        "monthly": 9.99,
        "yearly": 99.99
      }
    }
  },
  "categories": [
    "accessibility",
    "design-tools",
    "productivity"
  ],
  "supportedLanguages": [
    "en",
    "es",
    "fr",
    "de",
    "zh-CN",
    "ja"
  ],
  "minExpressVersion": "4.0.0",
  "addOnSettings": {
    "panel": {
      "width": 320,
      "height": 600,
      "minWidth": 280,
      "minHeight": 400,
      "resizable": true
    }
  },
  "capabilities": {
    "canAccessDocumentContent": true,
    "canModifyDocumentContent": true,
    "canAnalyzeImages": true,
    "canGenerateContent": true,
    "requiresInternet": true
  },
  "analytics": {
    "trackUsage": true,
    "trackPerformance": true,
    "privacyCompliant": true
  },
  "security": {
    "contentSecurityPolicy": "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; connect-src 'self' https://api.openai.com https://api.accessibility-validator.com;",
    "permissions": [
      "canvas-read",
      "canvas-write",
      "document-analysis",
      "external-api-access"
    ]
  },
  "localization": {
    "defaultLocale": "en",
    "supportedLocales": [
      "en",
      "es",
      "fr",
      "de",
      "zh-CN",
      "ja"
    ]
  },
  "testing": {
    "unitTests": "npm run test",
    "e2eTests": "npm run test:e2e",
    "accessibilityTests": "npm run test:a11y"
  },
  "build": {
    "outputDir": "dist",
    "buildScript": "npm run build",
    "devScript": "npm run dev"
  },
  "dependencies": {
    "@adobe/ccweb-add-on-sdk": "^1.0.0"
  },
  "devDependencies": {
    "webpack": "^5.0.0",
    "babel-core": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0"
  }
}